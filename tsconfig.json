{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "declaration": true,
    "sourceMap": true,

    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "baseUrl": "src",
    "outDir": "dist"
  },
  "exclude": [
    "node_modules",
    "dist",
    "*.config.(t|j)s"
  ]
}